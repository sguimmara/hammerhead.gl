{
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ES2022", "DOM"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "noEmit": false,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "typeRoots": [ "./node_modules/@webgpu/types", "./node_modules/@types"]
  },
  "include": ["src/**/*", "examples/**/*", "index.ts"],
  "exclude": ["**/*.spec.ts"]
}