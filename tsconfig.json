{
  "compilerOptions": {
    "lib": ["ES2020", "DOM"],
    "target": "ES2017",
    "module": "ES2020",
    "moduleResolution": "node",
    "noEmit": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "sourceMap": true,
    "typeRoots": [ "./node_modules/@webgpu/types", "./node_modules/@types"]
  },
  "include": ["src/**/*", "index.ts"],
  "exclude": ["**/*.spec.ts"]
}