{
  "extends": "./tsconfig.common.json",
  "compilerOptions": {
    "outDir": "dist",
    "noEmit": false,
    "declaration": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "plugins": [
      { "transform": "typescript-transform-paths" }
    ],
    "typeRoots": [ "./node_modules/@webgpu/types", "./node_modules/@types"]
  },
  "include": ["src/**/*"],
}