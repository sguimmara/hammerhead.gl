{
  "name": "hammerhead.gl",
  "author": "SÃ©bastien Guimmara",
  "license": "MIT",
  "version": "0.3.0",
  "type": "module",
  "description": "A 3D renderer written in TypeScript and WebGPU.",
  "main": "index.js",
  "scripts": {
    "precommit": "npm run lint && npm test",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "lint": "ttsc --noEmit",
    "build": "ttsc",
    "doc": "typedoc --readme none --name Hammerhead.gl src/index.ts",
    "start": "vite",
    "prepack": "shx rm -fr dist/ && shx mkdir dist && npx copyfiles -u 1 './src/**/*.wgsl' dist && node scripts/prepare-package.mjs && npm run build",
    "prepare": "husky install",
    "dev": "cd pages && npm run dev",
    "pages": "cd pages && npm run build"
  },
  "devDependencies": {
    "@loaders.gl/core": "^3.4.4",
    "@loaders.gl/gltf": "^3.4.4",
    "@loaders.gl/ply": "^3.4.4",
    "@tweakpane/core": "^1.1.9",
    "@types/chroma-js": "^2.4.0",
    "@types/jest": "^29.5.1",
    "@vitest/coverage-v8": "^0.32.0",
    "@webgpu/types": "^0.1.32",
    "apache-arrow": "^12.0.0",
    "es-main": "^1.2.0",
    "fs-extra": "^11.1.1",
    "husky": "^8.0.3",
    "path": "^0.12.7",
    "shx": "^0.3.4",
    "ts-node": "^10.9.1",
    "ttypescript": "^1.5.15",
    "tweakpane": "^3.1.10",
    "typedoc": "^0.24.8",
    "typescript": "^4.9.5",
    "typescript-transform-paths": "^3.4.6",
    "url": "^0.11.0",
    "vite": "^4.3.9",
    "vite-plugin-glsl": "^1.1.2",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.32.0",
    "vitest-mock-extended": "^1.1.3"
  },
  "dependencies": {
    "chroma-js": "^2.4.2",
    "wgpu-matrix": "^2.4.0"
  }
}
