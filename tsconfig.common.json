{
  "compilerOptions": {
    "lib": ["ES2022", "DOM"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" }
    ],
    "typeRoots": [ "./node_modules/@webgpu/types", "./node_modules/@types"]
  },
}